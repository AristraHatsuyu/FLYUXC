println("=== 测试精度边界问题 ===\n")

// 测试不同精度的数字
a := 0.1
b := 0.12
c := 0.123
d := 0.1234
e := 0.12345
f := 0.123456
g := 0.1234567
h := 0.12345678
i := 0.123456789
j := 0.1234567890
k := 0.12345678901
l := 0.123456789012
m := 0.1234567890123
n := 0.12345678901234
o := 0.123456789012345
p := 0.1234567890123456

println("使用 print（智能格式化）：")
print(a)
println("")
print(p)
println("")

println("\n使用 printf %.16f：")
printf("a (0.1):                   %.16f\n", a)
printf("p (0.1234567890123456):    %.16f\n", p)

println("\n使用 printf %.15f：")
printf("a (0.1):                   %.15f\n", a)
printf("p (0.1234567890123456):    %.15f\n", p)

println("\n测试计算结果：")
result1 := 0.1 + 0.2
printf("0.1 + 0.2 = %.16f\n", result1)
printf("0.1 + 0.2 = %.15f\n", result1)

println("\n测试更多边界：")
x1 := 1.0
x2 := 1.5
x3 := 1.9999999999999999
printf("1.0:                       %.16f\n", x1)
printf("1.5:                       %.16f\n", x2)
printf("1.9999999999999999:        %.16f\n", x3)
